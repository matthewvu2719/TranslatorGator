{
  "manifest_version": 3,
  "name": "Translator Gator",
  "version": "1.0.0",
  "description": "Automatically translate manga and comics with ERNIE AI",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
